<%= simple_form_for [todo.project, todo], data: {name: "new-todo-form"}, remote: true do |f| %>
  <%= f.error_notification %>
  <div class="row-fluid add-new-todo">
    <div class="span12">
      <%= f.input :title, label: false %>
    </div>
  </div>
  <div class="row-fluid add-new-todo">    
    <div class="span12 text-left">
      <%= f.button :submit, "Add this to-do" %>
    </div>
  </div>
<% end %>
